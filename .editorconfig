# http://editorconfig.org

root=true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.{yml,yaml,toml}]
indent_size = 2
quote_type = single

[*.{json,}]
quote_type = double

[*.{md,}]
indent_size = 2
# In Markdown, blank lines can be forced by ending a line with two spaces.
trim_trailing_whitespace = false
